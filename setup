pipenv --python 3 // create a virtualenv once 
pipevn shell // enter virtualenv
pipenv install django // install any package once

python manage.py runserver

django-admin startproject name
django-admin startapp name


python3 -m pipenv # install pipenv

$ pipenv install // Install from Pipfile, if there is one

